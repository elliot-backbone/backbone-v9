{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/startup.sh"
          }
        ]
      },
      {
        "matcher": "compact",
        "hooks": [
          {
            "type": "command", 
            "command": "echo '⚠️ Context compacted. Re-read: DOCTRINE.md §0-§6, SESSION_LEDGER.md top entry. QA: node qa/qa_gate.js'"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/pre-bash.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/post-edit.sh"
          }
        ]
      }
    ]
  },
  
  "permissions": {
    "allow": [
      "Bash(git *)",
      "Bash(node qa/qa_gate.js)",
      "Bash(node runtime/main.js)",
      "Bash(npm run *)",
      "Bash(npm install *)",
      "Bash(cat *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(grep *)",
      "Bash(ls *)",
      "Bash(wc *)",
      "Read(*)"
    ],
    "deny": [
      "Bash(rm -rf *)",
      "Bash(curl * | bash)",
      "Write(.github-token)"
    ]
  }
}
